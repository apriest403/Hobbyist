<%= provide(:title,@user.name) %>

<div class="container">
	<h1><%=@user.name %></h1>
	<% if current_user.followingUser?(@user) %>
		<%= render 'unfollow' %>
	<% else %>
		<%= render 'follow' %>
	<% end %>
	<h3>Interests</h3>
		<% @user.hobbies.each do |hobby| %>
        <%= link_to hobby do %>
            <div class="interests">
                <p><%= hobby.name %></p>
            </div>
        <% end %>
	<% end %>

</div>