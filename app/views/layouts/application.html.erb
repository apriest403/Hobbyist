<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Lobster|Pacifico|Cookie|Comfortaa|Ubuntu|Varela+Round">
</head>
<link href="assets/css/bootstrap-responsive.css" rel="stylesheet">
<body>

<%= render 'layouts/nav' %>
<div class="container">
  <% flash.each do |message_type, message| %>
    <% message_type = "danger" if message_type == "alert" %>
    <% message_type = "success" if message_type == "notice" %>
    <button type="button" class="close" data-dismiss="alert">x&nbsp;</button>
    <div class="alert alert-<%= message_type %>"><%= message %></div> 
  <% end %>
</div>

<%= yield %>

<!-- <div class="container"> -->
  <%#= render 'layouts/footer' %>
<!-- </div> -->
</body>
</html>
