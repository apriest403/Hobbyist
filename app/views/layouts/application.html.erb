<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" type="text/css" 
    href="http://fonts.googleapis.com/css?family=Lobster|Varela+Round">

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<%= render 'layouts/nav' %>

<div id="content"></div>

<div class="container">
  <% flash.each do |message_type, message| %>
    <% message_type = "danger" if message_type == "alert" %>
    <% message_type = "success" if message_type == "notice" %>
    <button type="button" class="close" data-dismiss="alert">x&nbsp;</button>
    <div class="alert alert-<%= message_type %>"><%= message %></div> 
  <% end %>
</div>

<%= yield %>

</body>
</html>
